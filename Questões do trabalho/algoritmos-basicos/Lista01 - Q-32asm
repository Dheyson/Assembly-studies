
# 32. Faça um algoritmo que receba o peso de uma pessoa em quilos,
# calcule e mostre esse peso em gramas.

.data
	peso_kg: .float 7.18
	const: .float 1000
	
	msg: .asciiz "O valor em gramas é: " 
.text
	lwc1 $f1, peso_kg
	lwc1 $f2, const
	
	# Valor do Peso
	li $v0, 4
	la $a0, msg
	syscall
	
	li $v0, 2
	mul.s $f12, $f1,$f2
	syscall